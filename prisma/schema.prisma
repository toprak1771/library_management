generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  books Json? @default("{\"past\": [], \"present\": []}")
  present_book_id Int?
  book Book? @relation(fields:[present_book_id],references:[id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Book {
  id Int @id @default(autoincrement())
  name String
  score Float @default(-1)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  users User[]
}